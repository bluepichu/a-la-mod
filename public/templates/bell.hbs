<ala-notification-toggle>
	{{#spark "|available" "|enabled"}}
	{{#if available}}
		{{#if enabled}}
			<ala-icon id="notification" class="mdi mdi-bell"></ala-icon>
		{{else}}
			<ala-icon id="notification" class="mdi mdi-bell-off"></ala-icon>
		{{/if}}
	{{else}}
		<ala-icon id="notification" class="mdi mdi-bell-outline"></ala-icon>
	{{/if}}
	{{/spark}}
</ala-notification-toggle>
